<h1>Update <%= @word.word_name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Word</label>
  <input id="name" name="name" type="text">

  <label for="definition">Redefine Word</label>
  <input id="definition" name="definition" type="text">

  <button type="submit">Update</button>
</form>
<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>
<p><a href="/words">Return to word list</a></p>
